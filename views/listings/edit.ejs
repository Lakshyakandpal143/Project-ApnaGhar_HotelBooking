<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
        <div class="mb-3 ">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listings[title]" value=<%= listing.title %> class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" class="form-control" name="listings[description]" ><%= listing.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="img" class="form-label">Image link</label>
            <input type="text" class="form-control" name="listings[image]" value="<%= listing.image %>">
        </div>
        <div class="row">

            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listings[price]" class="form-control" value=<%= listing.price %>>
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" class="form-control" name="listings[country]" value=<%= listing.country %>>
        </div>
        </div>
        <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" name="listings[location]" value=<%= listing.location %>>
            </div>
        <button class="btn btn-dark edit-btn">Edit</button>
        </form>
    </div>
</div>