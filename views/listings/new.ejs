<% layout("/layouts/boilerplate") %>
<div class="row">
<div class="col-8 offset-2">
<h3>Create New Listing</h3>
    <form action="/listings" method="post">

        <div class="mb-3 ">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listings[title]" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listings[description]" class="form-control"></textarea>
        </div>
        <div class="row">

            <div class="mb-3 ">
                <label for="image" class="form-label">Image-URL/Link</label>
                <input type="text" name="listings[image]" class="form-control">
            </div>
        </div>
        <div class="row">

            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listings[price]" class="form-control">
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listings[country]" class="form-control">
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listings[location]" class="form-control">
        </div>
        <button class="btn btn-dark add-btn">Add</button>
    </form>
</div>
</div>
