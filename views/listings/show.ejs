<% layout("/layouts/boilerplate") %>
<div class="row mt-5 ">
    <div class="col-8 offset-3">
        <h3>Listing Details :</h3>
    </div>
    <div class="col-6 offset-3">
        <div class="card ">
            <img src="<%= list.image %>" class="card-img-top show-img col-6" alt="listing-image">
            <div class="card-body">
                <p class="card-text">
                    <b><%= list.title %></b><br>
                    <%= list.description %> <br>
                    &#8377;<%= list.price.toLocaleString("en-IN") %> <br>
                    <%= list.location %> <br>
                    <%= list.country %> <br>
                </p>
            </div>
        </div>
    </div>
    </div>
    <div class="btns mb-5 row">
        <div class="col-auto offset-3">
            <form action="/listings/<%= list._id %>/edit" method="get">
                <button class="btn btn-dark edit-btn">Edit</button>
            </form>
        </div>
        <div class="col-auto ">
            <form action="/listings/<%= list._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark">Delete</button>
            </form>
        </div>
    </div>
</body>